<div class="container">
  <div class="jumbotron text-center bg-white text-black">
    <h1 class="display-4" id="app-title">Burger by You <img src="https://screenshots.gamebanana.com/img/ico/sprays/50de8c55af3d1.png"></h1>
    <p class="lead">Make your own burgers !</p>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border border-danger">
        <div class="card-header bg-white text-black">
          Can I take your order?
        </div>
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="burger">Place order here:</label>
              <input type="text" class="form-control" id="burgerToGo" placeholder="">
            </div>
            <button class="btn btn-danger" type="submit">Place order</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6 mt-4">
      <div class="card border border-danger">
        <div class="card-header bg-danger text-white">
          Burgers
        </div>
        <div class="card-body">
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devour=false}}
          {{/unless}}
          {{/each}}
        </div>
      </div>
    </div>

    <div class="col-md-6 mt-4">
      <div class="card devoured-card border border-danger">
        <div class="card-header bg-danger text-white" id="devoured-card-header">
          Devoured burgers
        </div>

        <div class="card-body">
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-devoured devour=true}}
          {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>